{
  "version": 2,
  "builds": [
    {
      "src": "server/index.py",
      "use": "@vercel/python",
      "config": {
        "python": "3.11"
      }
    },
    {
      "src": "client/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "server/(.*)",
      "dest": "server/index.py"
    },
    {
      "src": "api/(.*)",
      "dest": "client/$1"
    },
    {
      "src": "/(.*)",
      "dest": "client/$1"
    }
  ],

  "env": {
    "PYTHONPATH": "server"
  }
}
