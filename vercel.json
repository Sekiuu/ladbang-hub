{
  "version": 2,
  "builds": [
    {
      "src": "server/main.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.11" }
    },
    {
      "src": "client/next.config.mjs",
      "use": "@vercel/next",
      "config": { "maxLambdaSize": "15mb" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/main.py"
    },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/client" }
  ]
}
