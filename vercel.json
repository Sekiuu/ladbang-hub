{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/main.py"
    }
  ],
  "functions": {
    "server/api.py": {
      "runtime": "python3.13",
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "server/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ]
}
